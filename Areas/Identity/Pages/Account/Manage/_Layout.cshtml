@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="container">
    <h2>Administrar su cuenta</h2>

    <div>
        <h4 class="subtitle">Cambiar la configuración de su cuenta</h4>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <partial name="_ManageNav" />
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>

</div>


@section Scripts {
    @RenderSection("Scripts", required: false)
}

<style>
h2{
    font-weight: bold;
    text-align: center;
    padding-bottom: 25px;
    letter-spacing: 1.1px;
}    

.subtitle{
    text-align: center;
}

.btn{
    display: inline-block;
    width: 100%;
    background-color: #294d2b;
    color: #ffffff;
    border: none;
    cursor: pointer;
    border-radius: 0.8rem;
    font-size: 1.1rem;
    margin-bottom: 2rem;
    transition: 0.3s;
}

.btn:hover {
    background-color: #10311c;
    color: #fff;
}

.btn:focus{
    outline-style: none;
}
</style>
