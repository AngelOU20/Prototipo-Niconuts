@model Prototipo_Niconuts.Models.Proforma

@{
    ViewData["Title"] = "Editar Cantidad";
}

<br>
<div class="container">
<h1>Editar Cantidad del Producto</h1>
<hr>
<div class="row">
    <div class="col-md-4" style="margin-top: 5%;">
        <form asp-action="EditarProforma">
            
            <div class="form-group">
                <label class="control-label" >Usuario :</label>
                <p class="card-text">@Html.DisplayFor(model => model.UserID)</p>
            </div>
            <div class="form-group">
                <label  class="control-label" >Precio Unitario :</label>
                <p class="card-text">S/ @Html.DisplayFor(model => model.Precio)</p>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" min="1" max="10"/>
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-danger" style="width: 40%;" />
                <a asp-action="Proforma"  class="btn btn-danger" >Regresar al Carrito</a>
            </div>
        </form>
    </div>
    
</div>
</div>
</div>