@{
    ViewData["Title"] = "Formulario de Reclamaciones";
}


<div>
    <center>
        <h1>
            Formulario de Reclamaciones
        </h1>
    </center>
</div>
<br>

<form action="post" class="container"  >
    
    <div class="row">
        <div class="col-1"></div>
<div class="col-10">
    <div class="f1">
        <br>
    <div class="row">
        
            <div class="col-2"></div>
            <div class="col-4">
                <label for="">Nombre completo</label>
                <input type="text" required="required" class="form-control">
            </div> 
            <div class="col-4">
                <label for="">Email</label>
                <input type="email" required="required" class="form-control"> 
            </div>
            <div class="col-2"></div>
            <div class="col-2"></div>
            <div class="col-4">
                    <label for="">Celular</label>
                    <input type="text" required="required" class="form-control">
            </div> 
            
            <div class="col-4">
                <label for="">DNI</label>
                <input type="text" required="required" class="form-control"> 
            </div> 
            <div class="col-2"></div>
            <div class="col-2"></div>
            <div class="col-8">
                <label for="">Reclamacion</label>
                <textarea cols="30" rows="10" required="required" class="form-control" style="max-height: 200px;"></textarea>
                <small class="text-muted">Sea detallado y explicito con su reclamacion para un menor tiempo de respuesta.</small> 
            </div> 
            <br>
            <div class="col-5"></div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-lg btn-success text-light pl-5 pr-5">
                    Enviar
                </button>
            </div>
            <br> 
     </div>         
    </div>
    </div>
    <div class="col-1"></div>
    </div>
</form>


<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/contacto.css" />